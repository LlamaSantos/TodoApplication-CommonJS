<div class="container">
    <div class="row hero-unit">
        <h1>Tasks Todo</h1>
        <div class="">
            <button type="button" class="btn-large btn-primary js-todo-add">Add</button>
        </div>
    </div>
    <div class="row">
        <table class="table table-striped span12">
            <thead>
                <tr>
                    <th>#id</th>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Actions</th>
                </tr>
            </thead>
            {{#items}}
            <tr>
                <td>#{{id}}</td>
                <td>{{name}}</td>
                <td>{{description}}</td>
                <td>
                    <a href="#" class="btn btn-small js-todo-edit" data-id="{{id}}">Edit</a>
                    <a href="#" class="btn btn-small js-todo-remove" data-id="{{id}}">Delete</a>
                </td>
            </tr>
            {{/items}}
        </table>
    </div>
